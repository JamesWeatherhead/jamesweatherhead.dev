---
interface Props {
  tag: string;
  count?: number;
}

const { tag, count } = Astro.props;
const tagSlug = tag.toLowerCase().replace(/\s+/g, '-');
---

<a
  href={`/tags/${tagSlug}`}
  class="inline-flex items-center gap-1 px-3 py-1 text-sm font-medium rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 hover:bg-blue-200 dark:hover:bg-blue-800/40 transition-colors"
>
  {tag}
  {count && <span class="text-blue-600 dark:text-blue-400">({count})</span>}
</a>
