---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION, SOCIAL_LINKS } from '../consts';
import { getCollection } from 'astro:content';

const blogEntries = await getCollection('blog');
const latestPosts = blogEntries
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
}

const talks = [
  {
    title: 'Building Clinical AI Tools',
    event: 'Retool Summit',
    videoUrl: 'https://www.youtube.com/watch?v=Di7O9hJg1aM',
    thumbnail: 'https://img.youtube.com/vi/Di7O9hJg1aM/maxresdefault.jpg',
  },
];
---

<BaseLayout title="James Weatherhead">
  <div class="page-container">

    <!-- ===== HERO ===== -->
    <section class="hero">
      <div class="hero-photo-wrapper">
        <img
          src="/james.jpeg"
          alt="James Weatherhead"
          class="hero-photo"
          width="140"
          height="140"
        />
      </div>
      <h1 class="hero-name">{SITE_TITLE}</h1>
      <p class="hero-tagline">{SITE_DESCRIPTION}</p>
      <div class="hero-socials">
        <a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="social-icon">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
